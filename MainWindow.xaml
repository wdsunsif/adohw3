<Window x:Class="adohw3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADO.NET_TASK_3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="550">
    <StackPanel>
        <ComboBox ItemsSource="{Binding Authors}" SelectionChanged="ComboBox_SelectionChanged" Width="350" Height="40" FontSize="25" Margin="-100 30 0 0"/>
        <DataGrid Margin="0 50 0 0" Height="300" ItemsSource="{Binding Books}">
            
        </DataGrid>
    </StackPanel>
</Window>
